<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Slots experimentation</title>
  <meta name="importmap-type" content="systemjs-importmap" />
  <script type="systemjs-importmap">
    {
      "imports": {
        "react": "https://cdn.jsdelivr.net/npm/@esm-bundle/react@17.0.2-fix.0/system/react.development.js",
        "react-dom": "https://cdn.jsdelivr.net/npm/@esm-bundle/react-dom@17.0.2/system/react-dom.development.js",
        "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@5.8.2/lib/system/single-spa.min.js",
        "twind": "https://unpkg.com/twind/twind.umd.js",
        "rxjs": "https://cdn.jsdelivr.net/npm/@esm-bundle/rxjs@6.6.6/system/es2015/rxjs.min.js",
        "rxjs/operators": "https://cdn.jsdelivr.net/npm/@esm-bundle/rxjs@6.6.6/system/es2015/rxjs-operators.min.js",
        "root-config": "//localhost:9000/root-config.js",
        "primary-nav": "//localhost:8888/primary-nav.js",
        "users": "//localhost:8886/users.js",
        "tasks": "//localhost:8887/tasks.js"
      }
    }
  </script>
  <!-- <script src="https://cdn.jsdelivr.net/npm/import-map-overrides@2.2.0/dist/import-map-overrides.js"></script> -->
  <script src="https://cdn.jsdelivr.net/npm/systemjs@6.8.3/dist/system.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/systemjs@6.8.3/dist/extras/amd.min.js"></script>
  <template id="single-spa-layout">
    <single-spa-router>
      <nav class="main-nav">
        <application name="primary-nav"></application>
      </nav>
      <main class="main-content">
        <route path="tasks">
          <application name="tasks"></application>
        </route>
        <route path="users">
          <application name="users"></application>
          <route path="/tasks/:id">
            <application name="tasks"></application>
          </route>
        </route>
      </main>
    </single-spa-router>
  </template>
</head>
<body>
  <script>
    System.import('root-config');
  </script>
